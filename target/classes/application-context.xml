<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean
		class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />

	<bean id="eventGenerator"
		class="com.cor.cep.util.RandomTemperatureEventGenerator" />

	<bean id="criticalEventListener" class="com.cor.cep.listener.TemperatureCriticalEventListener" />

	<bean id="warningEventListener" class="com.cor.cep.listener.TemperatureWarningEventListener" />

	<bean id="monitorEventListener" class="com.cor.cep.listener.TemperatureMonitorEventListener" />

	<bean id="xRayEventHandler" class="com.cor.cep.handler.TemperatureEventHandler"
		scope="singleton" />

</beans>